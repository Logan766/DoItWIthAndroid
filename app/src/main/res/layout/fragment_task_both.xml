<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="56dp"
            android:background="@color/colorAccent"
            >

            <RelativeLayout
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/lottie_all"
                    android:layout_marginEnd="5dp"
                    android:padding="3dp"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    app:lottie_autoPlay="true" />

                <TextView
                    android:id="@+id/text_both_all"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="15dp"
                    android:layout_toEndOf="@+id/lottie_all"
                    android:text="All tasks"
                    android:textColor="@color/backgroundNormal" />

                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/lottie_medium"
                    android:padding="3dp"
                    android:layout_marginEnd="5dp"
                    android:layout_toEndOf="@+id/text_both_all"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    app:lottie_autoPlay="true" />

                <TextView
                    android:id="@+id/text_both_medium"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="15dp"
                    android:layout_toEndOf="@+id/lottie_medium"
                    android:text="Medium"
                    android:textColor="@color/backgroundNormal" />

                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/lottie_high"
                    android:layout_marginEnd="5dp"
                    android:padding="3dp"
                    android:layout_toEndOf="@+id/text_both_medium"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    app:lottie_autoPlay="true" />

                <TextView
                    android:id="@+id/text_both_high"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/lottie_high"
                    android:text="High"
                    android:textColor="@color/backgroundNormal" />
            </RelativeLayout>

        </RelativeLayout>

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tab_layout_tasks"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp">

            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Current tasks" />

            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Completed tasks" />

        </com.google.android.material.tabs.TabLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/view_pager_tasks"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="146dp" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
